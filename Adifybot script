  <script>
    /* =================== Monetag Loader =================== */
    const MONETAG_SCRIPT_URL = ""; // Example: 'https://cdn.monetag.io/sdk.js'

    function loadMonetag(url) {
      return new Promise(resolve => {
        if (!url) {
          window.Monetag = { showAd: () => Promise.resolve("Monetag stub: no URL") };
          return resolve("stub");
        }
        const s = document.createElement("script");
        s.src = url;
        s.onload = () => resolve("loaded");
        s.onerror = () => {
          window.Monetag = { showAd: () => Promise.resolve("load error") };
          resolve("failed");
        };
        document.head.appendChild(s);
      });
    }

    /* =================== Telegram Mini App =================== */
    function log(msg) {
      const el = document.getElementById("log");
      el.innerHTML = `<div>${new Date().toLocaleTimeString()} â€” ${msg}</div>` + el.innerHTML;
    }

    async function initTelegram() {
      if (!window.Telegram || !window.Telegram.WebApp) {
        log("âš ï¸ Telegram WebApp not found. Please open this inside Telegram.");
        return;
      }
      const WebApp = window.Telegram.WebApp;
      WebApp.expand();
      const user = WebApp.initDataUnsafe?.user;
      document.getElementById("userInfo").innerText = user
        ? `Hello ${user.first_name} (@${user.username || "no username"})`
        : "User info not available.";
      document.getElementById("btnSend").disabled = false;
      log("âœ… Telegram initialized.");
    }

    function sendToBot() {
      const WebApp = window.Telegram?.WebApp;
      if (!WebApp) return log("âŒ Telegram not connected.");
      const payload = { action: "reward_request", time: Date.now() };
      WebApp.sendData(JSON.stringify(payload));
      log("ðŸ“¤ Sent data to bot: " + JSON.stringify(payload));
    }

    async function showAd() {
      if (!window.Monetag?.showAd) return log("âš ï¸ Monetag not ready.");
      log("ðŸª„ Showing Monetag ad...");
      const res = await window.Monetag.showAd();
      log("ðŸŽ¯ Monetag response: " + res);
    }

    /* =================== Events =================== */
    document.getElementById("btnInit").addEventListener("click", initTelegram);
    document.getElementById("btnSend").addEventListener("click", sendToBot);
    document.getElementById("btnAd").addEventListener("click", showAd);

    /* =================== Init =================== */
    loadMonetag(MONETAG_SCRIPT_URL).then(st => log("ðŸ§© Monetag loader: " + st));
    window.addEventListener("DOMContentLoaded", () => {
      if (window.Telegram?.WebApp) initTelegram();
    });
  </script>
